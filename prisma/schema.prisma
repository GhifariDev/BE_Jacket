generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String

  // Relasi: Satu user bisa punya banyak produk
  products Product[] 
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  category    String
  stock       Int      @default(0)        // Stok default 0
  imageUrl    String?                     // Link gambar (opsional)
  
  // Foreign key ke User (opsional)
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
